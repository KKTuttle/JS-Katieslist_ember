{{#if addNewListing}}
  <h2>New Listing</h2>
  <div>
    <form>
      <div class="form-group">
        <label for='title'>Title</label>
        {{input value= title id='title'}}
      </div>
      <div class="form-group">
        <label for='description'>Description</label>
        {{input value= description id='description'}}
      </div>
      <div class="form-group">
        <label for='image'>Image</label>
        {{input value= image id='image'}}  
      </div>
      <div class="form-group">
        <label for='note'>Note</label>
        {{input value= note id='note'}}
      </div>
      <button {{action 'saveListing'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'listingFormShow'}}>New Listing</button>
{{/if}}
